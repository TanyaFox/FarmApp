<?xml version="1.0" encoding="utf-8"?> <!--Макет элемента списка RecyclerView в контенте главной активити (одно объявление)-->
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:transitionName="@string/transition_name_image"
                android:id="@+id/adv_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_name"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:text="Наименование"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_name"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_below="@+id/pro_name"
                android:textColor="@color/colorText"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_price"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_below="@+id/adv_name"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:text="Цена"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_price"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_below="@+id/pro_price"
                android:textColor="@color/colorText"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_type_of_price"
                android:layout_toRightOf="@+id/adv_price"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorText"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_rate"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_below="@+id/adv_price"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:text="Оценка"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_rate"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_below="@+id/pro_rate"
                android:textColor="@color/colorText"
                android:textSize="15dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>